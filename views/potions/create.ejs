<h1><%- isUpdating ? 'Update' : 'Create' %>a Potion</h1>

<form method="POST" action="<%- isUpdating ? `/potions/${potion._id}/update` : '/potions/create' %>">
  <label
    >Title:
    <input type="text" name="title" value="<%- isUpdating ? potion.title : '' %>" required />
  </label>
  <label
    >Ingredients:
    <input type="text" name="ingredients" value="<%- isUpdating ? potion.ingredients.join(' ') : '' %>" required />
  </label>
  <label
    >Difficulty:
   <input type="text" name="difficulty" value="<%- isUpdating ? potion.difficulty : '' %>"required />
   <button type="submit">Create</button>
</form>


