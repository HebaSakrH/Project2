<%- include('../partials/nav.ejs') %>
<div class="loggedin-layout">
<h1>Create Potions!</h1>

<form  method="POST" action="/potions/create">
  <label
    >Title
    <input type="text" name="title" required />
  </label>
  <br>
  <label
    >Ingredients
    <input type="text" name="ingredients" required />
  </label>
  <br>
  <label
    >Difficulty
    <select name="difficulty">
      <option value="any muggle could make it"> any muggle could make it</option>
      <option value="Hogwarts student level">Hogwarts student level</option>
      <option value="professor Snape level">professor Snape level</option>
    </select></label
  >
  <div class="page-btns">
    <br>
  <button type="submit"> Create Potion </button></div>
</form>

</div>









